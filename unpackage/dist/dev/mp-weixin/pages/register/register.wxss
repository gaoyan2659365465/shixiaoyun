
.register-container.data-v-bac4a35d {
	min-height: 100vh;
	background-color: #F5F5F5;
}

/* 自定义导航栏 */
.custom-navbar.data-v-bac4a35d {
	position: relative;
	height: 88rpx;
	background-color: #FFFFFF;
	display: flex;
	align-items: center;
	justify-content: center;
	border-bottom: 1rpx solid #E5E5E5;
}
.back-btn.data-v-bac4a35d {
	position: absolute;
	left: 32rpx;
	width: 48rpx;
	height: 48rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.back-icon.data-v-bac4a35d {
	font-size: 48rpx;
	color: #000;
	font-weight: 300;
	line-height: 1;
}
.navbar-title.data-v-bac4a35d {
	font-size: 34rpx;
	font-weight: 500;
	color: #000;
}

/* 表单容器 */
.form-container.data-v-bac4a35d {
	margin: 32rpx 32rpx 0;
	background-color: #FFFFFF;
	border-radius: 16rpx;
	padding: 48rpx 32rpx;
}

/* 表单项 */
.form-item.data-v-bac4a35d {
	margin-bottom: 48rpx;
}
.label-wrapper.data-v-bac4a35d {
	display: flex;
	align-items: center;
	margin-bottom: 16rpx;
}
.form-label.data-v-bac4a35d {
	font-size: 28rpx;
	color: #000;
	font-weight: 400;
}
.required-mark.data-v-bac4a35d {
	font-size: 28rpx;
	color: #f34545;
	margin-left: 4rpx;
}
.optional-mark.data-v-bac4a35d {
	font-size: 24rpx;
	color: #a7abb2;
	margin-left: 8rpx;
}
.form-input.data-v-bac4a35d {
	width: 100%;
	height: 80rpx;
	background-color: #F5F5F5;
	border-radius: 8rpx;
	padding: 0 24rpx;
	font-size: 28rpx;
	color: #000;
	border: none;
}
.form-textarea.data-v-bac4a35d {
	width: 100%;
	min-height: 160rpx;
	background-color: #F5F5F5;
	border-radius: 8rpx;
	padding: 20rpx 24rpx;
	font-size: 28rpx;
	color: #000;
	border: none;
	box-sizing: border-box;
}
.input-placeholder.data-v-bac4a35d {
	color: #C0C0C0;
	font-size: 28rpx;
}

/* 隐私条款 */
.agreement.data-v-bac4a35d {
	display: flex;
	align-items: center;
	margin-top: 80rpx;
	margin-bottom: 48rpx;
}
.agreement-checkbox.data-v-bac4a35d {
	margin-right: 16rpx;
	transform: scale(1);
}
.agreement-text.data-v-bac4a35d {
	font-size: 28rpx;
	color: #000;
	font-weight: 400;
}

/* 提交按钮 */
.submit-btn.data-v-bac4a35d {
	width: 100%;
	height: 88rpx;
	background-color: #000;
	color: #FFF;
	font-size: 32rpx;
	font-weight: 500;
	border-radius: 44rpx;
	border: none;
	display: flex;
	align-items: center;
	justify-content: center;
}
.submit-btn.data-v-bac4a35d::after {
	border: none;
}
