
.register-container.data-v-bac4a35d {
	min-height: 100vh;
	background-color: #F5F6FA;
	padding: 48rpx 32rpx;
}

/* 顶部标题 */
.header.data-v-bac4a35d {
	margin-bottom: 60rpx;
	margin-top: 40rpx;
}
.title.data-v-bac4a35d {
	display: block;
	font-size: 48rpx;
	font-weight: 600;
	color: #17171a;
	margin-bottom: 16rpx;
}
.subtitle.data-v-bac4a35d {
	display: block;
	font-size: 28rpx;
	color: #656a73;
}

/* 注册表单 */
.register-form.data-v-bac4a35d {
	margin-bottom: 32rpx;
}
.form-item.data-v-bac4a35d {
	margin-bottom: 32rpx;
}
.input-wrapper.data-v-bac4a35d {
	display: flex;
	align-items: center;
	height: 112rpx;
	background-color: #fff;
	border-radius: 16rpx;
	padding: 0 24rpx;
	border: 2rpx solid transparent;
	position: relative;
}
.input-wrapper.error.data-v-bac4a35d {
	border-color: #f34545;
}
.required-mark.data-v-bac4a35d {
	color: #f34545;
	font-size: 32rpx;
	margin-right: 8rpx;
	line-height: 1;
}
.input-icon.data-v-bac4a35d {
	width: 40rpx;
	height: 40rpx;
	margin-right: 16rpx;
}
.form-input.data-v-bac4a35d {
	flex: 1;
	font-size: 28rpx;
	color: #17171a;
}
.clear-icon.data-v-bac4a35d,
.eye-icon.data-v-bac4a35d {
	width: 36rpx;
	height: 36rpx;
	margin-left: 16rpx;
}
.code-btn.data-v-bac4a35d {
	padding: 12rpx 24rpx;
	font-size: 24rpx;
	color: #4458ff;
	white-space: nowrap;
}
.code-btn.disabled.data-v-bac4a35d {
	color: #a7abb2;
}
.error-text.data-v-bac4a35d {
	display: flex;
	align-items: center;
	margin-top: 8rpx;
	margin-left: 24rpx;
	font-size: 24rpx;
	color: #f34545;
}
.error-icon.data-v-bac4a35d {
	width: 24rpx;
	height: 24rpx;
	margin-right: 4rpx;
}

/* 隐私协议 */
.agreement-section.data-v-bac4a35d {
	margin-bottom: 32rpx;
}
.agreement-label.data-v-bac4a35d {
	display: flex;
	align-items: center;
}
.agreement-text.data-v-bac4a35d {
	font-size: 24rpx;
	color: #656a73;
	margin-left: 8rpx;
}
.link.data-v-bac4a35d {
	color: #4458ff;
}

/* 注册按钮 */
.register-btn.data-v-bac4a35d {
	width: 100%;
	height: 112rpx;
	background-color: #4458ff;
	color: #fff;
	font-size: 32rpx;
	font-weight: 500;
	border-radius: 16rpx;
	border: none;
	margin-bottom: 32rpx;
}
.register-btn.loading.data-v-bac4a35d {
	opacity: 0.8;
}
.register-btn.disabled.data-v-bac4a35d {
	background-color: #a7abb2;
	opacity: 0.6;
}
.register-btn.data-v-bac4a35d::after {
	border: none;
}

/* 登录入口 */
.login-link.data-v-bac4a35d {
	text-align: center;
	font-size: 28rpx;
	color: #656a73;
}
.login-link .link.data-v-bac4a35d {
	margin-left: 8rpx;
}
